# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=your-bucket-name-from-terraform-output

# Supabase Configuration
# SUPABASE_URL can be either:
# 1. Direct postgres connection: postgresql://postgres.xxx:password@aws-0-region.pooler.supabase.com:6543/postgres
# 2. Supabase project URL: https://your-project.supabase.co (requires SUPABASE_SERVICE_ROLE_KEY)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Embedding Configuration
EMBEDDING_MODE=fake
# EMBEDDING_MODE=openai
# OPENAI_API_KEY=your_openai_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Similarity Threshold (cosine distance, lower = more strict)
SIMILARITY_THRESHOLD=0.7

